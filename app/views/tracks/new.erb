<% if @track.errors.any? %>
  <div>
    <strong>Some issues with adding your track</strong>
    <ul>
      <% @track.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<form method="post" action="/tracks">
  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<% @track.title %>">
  </div>
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<% @track.author %>">
  </div>
  <div>
    <label>URL:</label>
    <input type="text" name="url" value="<% @track.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>